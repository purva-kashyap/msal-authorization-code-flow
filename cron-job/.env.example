# Meeting Transcript Cron Job - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================
# Database Configuration
# ===========================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/entra_tokens

# ===========================
# Encryption (REQUIRED)
# ===========================
# Must match the encryption key from the main FastAPI app
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# ===========================
# Microsoft Azure/Entra ID (REQUIRED)
# ===========================
CLIENT_ID=your-azure-client-id
CLIENT_SECRET=your-azure-client-secret
TENANT_ID=your-azure-tenant-id

# ===========================
# Zoom API (Optional)
# ===========================
# If not provided, Zoom meeting processing will be skipped
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_ACCOUNT_ID=your-zoom-account-id

# ===========================
# OpenAI Configuration (Optional but Recommended)
# ===========================
# Required for generating meeting summaries
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# ===========================
# Processing Settings
# ===========================
# How many hours back to look for new meetings
LOOKBACK_HOURS=24

# Maximum meetings to process per user per run
MAX_MEETINGS_PER_USER=50

# ===========================
# Retry Configuration
# ===========================
# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Base for exponential backoff (2.0 means 2^attempt seconds)
RETRY_BACKOFF_BASE=2.0

# Maximum wait time between retries (seconds)
RETRY_MAX_WAIT=60

# ===========================
# Rate Limiting
# ===========================
# Microsoft Graph API requests per minute
GRAPH_API_RATE_LIMIT=100

# Zoom API requests per second
ZOOM_API_RATE_LIMIT=60

# OpenAI API requests per minute
OPENAI_RATE_LIMIT=10

# ===========================
# Debug Settings
# ===========================
# Set to true for verbose logging
DEBUG=false
